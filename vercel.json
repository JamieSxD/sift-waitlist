{
  "version": 2,
  "name": "sift-waitlist",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
        "src": "public/**/*",
        "use": "@vercel/static"
    }
  ],
  "routes": [
      {
          "src": "/styles.css",
          "dest": "/public/styles.css"
      },
      {
          "src": "/script.js",
          "dest": "/public/script.js"
      },
      {
          "src": "/api/(.*)",
          "dest": "/server.js"
      },
      {
          "src": "/(.*)",
          "dest": "/server.js"
      }
  ],
  "env": {
      "NODE_ENV": "production"
  }
}